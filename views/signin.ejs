<html>
  <head>
    <title>Sign In</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-slate-800 text-zinc-50">
    <div class="flex justify-center"><%- include ('header') %></div>
    <div class="flex flex-col justify-center items-center p-4">
      <div class="text-center">
        <a
          class="bg-inherit hover:bg-teal-800 transition duration-200 border-2 border-black p-2 rounded-lg"
          href="/"
          >Home</a
        >
      </div><br>
      <div class="flex flex-col justify-center md:w-1/5 w-full">
        <h1 class="text-2xl flex justify-center font-semibold">Sign-in to Online-Voting-Platform</h1>
        <form action="/signin" method="post" class="flex flex-col gap-4 pt-6">
          <div class="flex flex-col">
            <label for="email">Email</label>
            <input
              class="border-2 border-black p-2 rounded-lg bg-inherit"
              type="text"
              name="email"
              id="email"
            />
          </div>
          <div class="flex flex-col">
            <label for="password">Password</label>
            <input
              class="border-2 border-black p-2 rounded-lg bg-inherit"
              type="password"
              name="password"
              id="password"
            />
          </div>
          <button
          class="bg-inherit transition duration-200 border-2 border-black p-2 rounded-lg hover:bg-teal-800 mt-8"
            type="submit"
          >
            Sign In
          </button>
        </form>
      </div>
    </div>
  </body>
</html>