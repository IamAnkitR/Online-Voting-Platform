<html>
  <head>
    <title>Sign Up</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-slate-800 text-zinc-50">
    <div class="flex justify-center"><%- include ('header') %></div>
    <div class="flex flex-col justify-center items-center p-4">
      <div class="flex flex-col justify-center md:w-1/5 w-full">
        <div class="text-center">
          <a
            class="bg-inherit hover:bg-teal-800 transition duration-200 border-2 border-black p-2 rounded-lg"
            href="/"
            >Home</a
          >
        </div>
        <br>
        <h1 class="text-2xl flex justify-center font-semibold">Sign-Up to the Online-Voting-Platform</h1>
        <form action="/users" method="post" class="flex flex-col gap-4 pt-6">
          <div class="flex flex-col">
            <label for="name">Name</label>
            <input
              type="text"
              name="name"
              class="border-2 border-black p-2 rounded-lg bg-inherit"
            />
          </div>
          <div class="flex flex-col">
            <label for="email">Email</label>
            <input
              type="text"
              name="email"
              class="border-2 border-black p-2 rounded-lg bg-inherit"
            />
          </div>
          <div class="flex flex-col">
            <label for="password">Password</label>
            <input
              type="password"
              name="password"
              class="border-2 border-black p-2 rounded-lg bg-inherit"
            />
          </div>
          <button
            type="submit"
            class="bg-inherit transition duration-200 border-2 border-black p-2 rounded-lg hover:bg-teal-800"
          >
            Sign Up
          </button>
        </form>
        <div class="flex flex-col justify-center pt-4 items-center">
          <p>Already have an account?</p>
          <a
            class=" border-2 px-8 border-black hover:bg-teal-800 p-1 rounded-lg bg-inherit"
            href="/signin"
            >Log In</a
          >
        </div>
      </div>
    </div>
  </body>
</html>